@model IEnumerable<ErickGranda_Taller.Models.Jugador>

@{
    ViewData["Title"] = "Index";
}

<h1>Jugadores</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Crear nuevo jugador</a>
</p>
<div class="mt-2 col-md-4">
    <form asp-action="Index" method="get">
        <select class="form-control" mt-3 name="IDEquipo" asp-items="ViewBag.IDEquipo">
            <option value="0">Selecciona el Equipo...</option>
        </select>
        <input class="btn-primary col-12 mt-2" type="submit" value="Filtrar Equipos" />
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posición)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Posición)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Equipo.Nombre)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.ID">Editar</a> |
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.ID">Detalles</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
